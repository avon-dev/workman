<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyprofileActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="나의 프로필"
        app:layout_constraintBottom_toBottomOf="@+id/view" android:id="@+id/textView3"/>

    <ImageButton
        android:background="@drawable/ic_chevron_left_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <View
        android:layout_marginTop="55dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp" android:id="@+id/view"/>

    <TextView
        android:id="@+id/MP_name"
        android:text="이름"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MP_emailtext"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MP_name"
        android:text="이메일"
        android:textSize="25dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MP_email"
        android:background="@drawable/bottomline"
        android:maxLines="2"
        android:text="workman1234@gmail.com"
        android:textSize="20dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/MP_emailtext"
        app:layout_constraintBottom_toBottomOf="@id/MP_emailtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MP_emailtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/MP_phonetext"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/MP_emailtext"
        app:layout_constraintTop_toBottomOf="@+id/MP_email"
        android:text="전화번호"
        android:textSize="25dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MP_phone"
        android:background="@drawable/bottomline"
        android:maxLines="1"
        android:text="010-1234-5678"
        android:textSize="25dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/MP_phonetext"
        app:layout_constraintBottom_toBottomOf="@id/MP_phonetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MP_phonetext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/MP_statetext"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/MP_phonetext"
        app:layout_constraintTop_toBottomOf="@+id/MP_phone"
        android:text="상태"
        android:textSize="25dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MP_state"
        android:background="@drawable/bottomline"
        android:maxLines="1"
        android:text="직원"
        android:textSize="25dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/MP_statetext"
        app:layout_constraintBottom_toBottomOf="@id/MP_statetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MP_statetext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/MP_grouptext"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/MP_statetext"
        app:layout_constraintTop_toBottomOf="@+id/MP_state"
        android:text="그룹"
        android:textSize="25dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MP_group"
        android:background="@drawable/bottomline"
        android:maxLines="1"
        android:text="야간 A조"
        android:textSize="25dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/MP_grouptext"
        app:layout_constraintBottom_toBottomOf="@id/MP_grouptext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MP_grouptext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="20dp" />

    <View
        android:layout_marginTop="30dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MP_grouptext"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view2"/>

</androidx.constraintlayout.widget.ConstraintLayout>