<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    tools:context=".ScheduleDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calendar_prev_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="이전 달"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/calendar_current_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="current date"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/calendar_next_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="다음 달"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/calendar_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TextView1" />

    <TextView
        android:id="@+id/calendar_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TextView2" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="2dp"
        android:id="@+id/calendar_recyclerview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>